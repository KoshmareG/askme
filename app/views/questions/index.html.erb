<div class="container">
  <h2 class="title-lg mb">Недавно добавились</h2>
  <div class="users-box">
    <% @users.each do |user| %>
      <%= render partial: 'users/user_avatar', locals: {user: user} %>
    <% end %>
  </div>
</div>
<div class="container pb-0">
  <h2 class="title-lg mb">Хештеги</h2>
  <%= render @hash_tags %>
</div>
<div class="container">
  <h2 class="title-lg">
    <%= @questions.count %>
    <%= inclination(@questions.count, 'вопрос', 'вопроса', 'вопросов') %>
  </h2>
</div>
<% @questions.each do |question| %>
  <div class="mt-sm container<%= ' text-opacity' if question.hidden %>">
    <%= render question %>
  </div>
<% end %>
